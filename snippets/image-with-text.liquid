<div class="home_banner" id="banner_{{section.id}}">
  <div class="banner_div b_{{section.id}} main align_{{section.settings.alignment}} set_{{section.settings.width}}" >
  </div>
    <div class="banner_text align_{{section.settings.alignment}}" >
      <div class="banner_inner_wrap">
      {% if section.settings.heading %}
      <h4>{{section.settings.heading}}</h4>
      {% endif %}
      {% if section.settings.content %}
      <p>{{section.settings.content}}</p>
      {% endif %}
      {% if section.settings.btn_link %}
        <div><a class="index_btn" href="{{section.settings.btn_link}}">{{section.settings.btn_text}}</a></div>
      {% endif %}
      </div>
    </div>
</div>
{% if section.settings.video_id != blank %}
<div class="video-container">
  <div class="video_wrapper">
    <div class="">
      <iframe id="col_v1" src="https://player.vimeo.com/video/{{ section.settings.video_id }}?color=d4d4d4&background=1&autoplay=1" width="100%" height="100%" style="overflow:hidden;overflow-x:hidden;overflow-y:hidden;height:100%;width:100%;position:absolute;top:0px;left:0px;right:0px;bottom:0px" frameborder="0" allow="autoplay; fullscreen" allowfullscreen></iframe>
    </div>
  </div>
</div>
{% endif %}
<style>
  #banner_{{section.id}}.home_banner h4{color:{{section.settings.heading_color}} }
  #banner_{{section.id}}.home_banner p{color:{{section.settings.text_color}} }
  #banner_{{section.id}}.home_banner a{color:{{section.settings.text_color2}};border-color:{{section.settings.text_color2}}}
  #banner_{{section.id}}.home_banner a:hover {color: #fff;}
  .b_{{section.id}}{ background-image:url({{section.settings.image | img_url:"2048x"}})}
  @media only screen
  and (max-width:767px) {
    #banner_{{section.id}}.home_banner h4{color:#000; }
    #banner_{{section.id}}.home_banner p{color:#000; }
    #banner_{{section.id}}.home_banner a{color:#000;border-color:#000;}
    #banner_{{section.id}}.home_banner a:hover {color: #fff;background-color: #000;}
   .b_{{section.id}}{ background-image:url({{section.settings.imagem | img_url:"1024x"}}) }
  }
</style>
