{% include 'gravityadmin' %}
<div style="display: none !important;  visibility: hidden !important;" class="cmspro-section" id="cmspro-6905dc32"></div>
<section class="page-content">
  <div class="page-wrapper">
    <div class="container c_pad0">
      <div class="row">
        <div class="page-inner">
          <div id="page">
            <div class="details">
              {% for block in section.blocks %}
                {% if block.type == 'image_text' %}
                <div class="home_banner" id="banner_{{ block.id }}">
                  <div class="banner_div b_{{block.id}} main align_{{block.settings.alignment}} set_{{block.settings.width}}" >
                  </div>
                    <div class="banner_text align_{{block.settings.alignment}}" >
                      <div class="banner_inner_wrap">
                      {% if block.settings.heading %}
                      <h4>{{block.settings.heading}}</h4>
                      {% endif %}
                      {% if block.settings.content %}
                      {{block.settings.content}}
                      {% endif %}
                      {% if block.settings.btn_link %}
                        <div><a class="index_btn" href="{{block.settings.btn_link}}">{{block.settings.btn_text}}</a></div>
                      {% endif %}
                      </div>
                    </div>

                </div>
                <style>
                  #banner_{{ block.id }} h4{color:{{block.settings.heading_color}} }
                  #banner_{{ block.id }} p{color:{{block.settings.text_color}}; line-height: 1.85em; }
                  #banner_{{ block.id }} a{color:{{block.settings.text_color2}};border-color:{{block.settings.text_color2}}}
                  #banner_{{ block.id }} a:hover{color:#fff;}
                  .b_{{block.id}}{ background-image:url({{block.settings.image | img_url:"2048x"}})}
                  @media only screen
                  and (max-width:767px) {
                   .b_{{block.id}}{ background-image:url({{block.settings.imagem | img_url:"1024x"}}) }
                  }
                </style>
                {% endif %}
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "Image with Text",
    "max_blocks": 10,
    "settings": [
    ],
 	  "blocks": [
      {
        "type": "image_text",
        "name": "Image with Text",
        "settings": [
    		{
    			"type":"image_picker",
    			"id":"image",
    			"label":"Image"
    		},
    		{
    			"type":"image_picker",
    			"id":"imagem",
    			"label":"Mobile Image"
    		},
    		{
    			"type":"color",
    			"id":"heading_color",
    			"label":"Heading Color",
    			"default":"#000"
    		},
    		{
    			"type":"color",
    			"id":"text_color",
    			"label":"Text Color",
    			"default":"#000"
    		},
    		{
    			"type":"color",
    			"id":"text_color2",
    			"label":"Button Color",
    			"default":"#000"
    		},
    		{
          "type": "select",
          "id": "width",
          "label": "width",
          "default": "full",
          "options": [
            {
              "value": "half",
              "label": "50%"
            },
            {
              "value": "full",
              "label": "100%"
            }
          ]
        },
        {
          "type": "select",
          "id": "alignment",
          "label": "Text Alignement",
          "default": "left",
          "options": [
            {
              "value": "left",
              "label": "left"
            },
            {
              "value": "right",
              "label": "right"
            }
          ]
        },
    		{
    			"type":"text",
    			"id":"heading",
    			"label":"Heading"
    		},
    		{
    			"type":"richtext",
    			"id":"content",
    			"label":"Content"
    		},
    		{
    			"type":"text",
    			"id":"btn_text",
    			"label":"Button"
    		},
    		{
    			"type":"url",
    			"id":"btn_link",
    			"label":"Link"
    		}
    		]
      }
    ],
  "presets": []
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
{% endjavascript %}
