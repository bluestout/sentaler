{% include 'gravityadmin' %}
<div style="display: none !important;  visibility: hidden !important;" class="cmspro-section" id="cmspro-6a2f69fc"></div>
<div class="home_banner" id="banner_{{section.id}}">
  <div class="banner_div b_{{section.id}} main align_{{section.settings.alignment}} set_{{section.settings.width}}" >
  </div>
    <div class="banner_text align_{{section.settings.alignment}}" >
      <div class="banner_inner_wrap">
      {% if section.settings.heading %}
      <h4>{{section.settings.heading}}</h4>
      {% endif %}
      {% if section.settings.content %}
      <p>{{section.settings.content}}</p>
      {% endif %}
      {% if section.settings.btn_link %}
        <div><a class="index_btn" href="{{section.settings.btn_link}}">{{section.settings.btn_text}}</a></div>
      {% endif %}
      </div>
    </div>
</div>

{% if template contains 'page' %}
<section class="page-heading">
  <div class="page-heading-wrapper">
    <div class="container">
      <div class="row">
        <div class="page-heading-inner">
          <h1 class="page-title block text-center">{{ page.title }}</h1>
          {{ page.content }}
        </div>
      </div>
    </div>
  </div>
</section>
{% endif %}

{% if section.settings.video_id != blank %}
<div class="video-container">
  <div class="video_wrapper">
    <div class="">
      <iframe class="desktop-only" id="col_v1" src="https://player.vimeo.com/video/{{ section.settings.video_id }}?color=d4d4d4&background=1&autoplay=1" width="100%" height="100%" style="overflow:hidden;overflow-x:hidden;overflow-y:hidden;height:100%;width:100%;position:absolute;top:0px;left:0px;right:0px;bottom:0px" frameborder="0" allow="autoplay; fullscreen" allowfullscreen></iframe>
      <iframe class="mobile-only" id="col_v1" src="https://player.vimeo.com/video/{{ section.settings.video_id }}?color=d4d4d4&background=1&muted=1" width="100%" height="100%" style="overflow:hidden;overflow-x:hidden;overflow-y:hidden;height:100%;width:100%;position:absolute;top:0px;left:0px;right:0px;bottom:0px" frameborder="0" allow="autoplay; fullscreen" allowfullscreen></iframe>
    </div>
  </div>
</div>
{% endif %}
<style>
  #banner_{{section.id}}.home_banner h4{color:{{section.settings.heading_color}} }
  #banner_{{section.id}}.home_banner p{color:{{section.settings.text_color}} }
  #banner_{{section.id}}.home_banner a{color:{{section.settings.text_color2}};border-color:{{section.settings.text_color2}}}
  #banner_{{section.id}}.home_banner a:hover {color: #fff;}
  .b_{{section.id}}{ background-image:url({{section.settings.image | img_url:"2048x"}})}
  @media only screen
  and (max-width:767px) {
    #banner_{{section.id}}.home_banner h4{color:#000; }
    #banner_{{section.id}}.home_banner p{color:#000; }
    #banner_{{section.id}}.home_banner a{color:#000;border-color:#000;}
    #banner_{{section.id}}.home_banner a:hover {color: #fff;background-color: #000;}
   .b_{{section.id}}{ background-image:url({{section.settings.imagem | img_url:"1024x"}}) }
  }
</style>

{% schema %}
  {
    "name": "Image with text",
    "settings": [
		{
			"type":"image_picker",
			"id":"image",
			"label":"Image"
		},
		{
			"type":"image_picker",
			"id":"imagem",
			"label":"Mobile Image"
		},
    {
      "type": "text",
      "id": "video_id",
      "label": "Vimeo Video ID"
    },
		{
			"type":"color",
			"id":"heading_color",
			"label":"Heading Color",
			"default":"#000"
		},
		{
			"type":"color",
			"id":"text_color",
			"label":"Text Color",
			"default":"#000"
		},
		{
			"type":"color",
			"id":"text_color2",
			"label":"Button Color",
			"default":"#000"
		},
		{
          "type": "select",
          "id": "width",
          "label": "width",
          "default": "full",
          "options": [
            {
              "value": "half",
              "label": "50%"
            },
            {
              "value": "full",
              "label": "100%"
            }
          ]
        },
        {
          "type": "select",
          "id": "alignment",
          "label": "Text Alignement",
          "default": "left",
          "options": [
            {
              "value": "left",
              "label": "left"
            },
            {
              "value": "right",
              "label": "right"
            }
          ]
        },
		{
			"type":"text",
			"id":"heading",
			"label":"Heading"
		},
		{
			"type":"richtext",
			"id":"content",
			"label":"Content"
		},
		{
			"type":"text",
			"id":"btn_text",
			"label":"Button"
		},
		{
			"type":"url",
			"id":"btn_link",
			"label":"Link"
		}
		],
  "presets": []
  }
{% endschema %}

