<div class="index_custom_section">
  <div class="flex_wrap">
  {% if section.settings.option == 'image' %}
  <div class="grid__item col-sm-12 pad_0 imgdiv">
    {% if section.settings.image %}
  <img src="{{section.settings.image | img_url: "original" }}"/>
    {% endif %}
  </div>
  {% endif %}
  {% if section.settings.option == 'image-text' %}
    
  		<div class="customhalf imgdiv {{section.settings.position}}">
    {% if section.settings.image %}
    <img src="{{section.settings.image | img_url: "original" }}"/>
    {% endif %}
  </div>
      
        <div class="customhalf {{section.settings.position}}">
          <div class="text--block">

          {% if section.settings.heading %}
           <h4 class="las_25">{{section.settings.heading}}</h4>
          {% endif %}
          {% if section.settings.content %}
           <div class="lass_17">{{section.settings.content}}</div>
          {% endif %}
          {% if section.settings.enable %}
          <div class="image_block">
              {% for block in section.blocks %}
                  <div class="img_col">
                    {% if block.settings.icon %}
                    <span class="icon {{block.settings.icon}}"></span>
                     {% endif %}
                    {% if block.settings.text %}
                    <span>{{block.settings.text}}</span>
                    {% endif %}
                  </div>
              {% endfor %}
		</div>
          {% endif %}
          {% if section.settings.btn_link %}
          <a class="index_btn" href="{{section.settings.btn_link }}">
            {{section.settings.btn_text}}
          </a>
          {% endif %}
        </div>
          </div>

   
       
  {% endif %}
</div>
</div>
<style>
  .index_custom_section h4{color:{{section.settings.heading_color}} }
  .index_custom_section p{color:{{section.settings.text_color}} }
  .index_custom_section a{color:{{section.settings.text_color2}};border-color:{{section.settings.text_color2}}}
  
</style>
{% schema %}
  {
    "name": "Custom-image-text",
	 "max_blocks": 3,
    "settings": [
		{
          "type": "select",
          "id": "option",
          "label": "Choose layout",
          "default": "image",
          "options": [
            {
              "value": "image",
              "label": "Image only"
            },
            {
              "value": "image-text",
              "label": "Image and text"
            }
          ]
        },
		{
			"type":"image_picker",
			"id":"image",
			"label":"Image"
		},
		
		{
			"type":"color",
			"id":"heading_color",
			"label":"Heading Color",
			"default":"#000"
		},
		{
			"type":"color",
			"id":"text_color",
			"label":"Text Color",
			"default":"#000"
		},
		{
			"type":"color",
			"id":"text_color2",
			"label":"Button Color",
			"default":"#000"
		},
		{
			"type":"text",
			"id":"heading",
			"label":"Heading"
		},
		{
			"type":"textarea",
			"id":"content",
			"label":"Content"
		},
		{
			"type":"text",
			"id":"btn_text",
			"label":"Button text"
		},
		{
			"type":"url",
			"id":"btn_link",
			"label":"Button link"
		},
		{
          "type": "select",
          "id": "position",
          "label": "Text position",
          "default": "right",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ]
        },
		{
			"type":"checkbox",
			"id":"enable",
			"label":"Enable Icon block"
		}
	],
 "blocks": [
    {
      "type": "logo_image",
      "name": "Logo",
	 
      "settings": [
		{
          "type": "text",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Heading"
        }
      ]
    }
  ],
"presets": [
    {
      "name": "Custom-image-text",
      "category": "Image"
     
    }
  ]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

