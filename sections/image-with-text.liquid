<div class="home_banner">
  <div class="banner_div b_{{section.id}} main align_{{section.settings.alignment}} set_{{section.settings.width}}" >
  </div>
    <div class="banner_text align_{{section.settings.alignment}}" >
      <div class="banner_inner_wrap">
      {% if section.settings.heading %}
      <h4>{{section.settings.heading}}</h4>
      {% endif %}
      {% if section.settings.content %}
      <p>{{section.settings.content}}</p>
      {% endif %}
      {% if section.settings.btn_link %}
        <div><a class="index_btn" href="{{section.settings.btn_link}}">{{section.settings.btn_text}}</a></div>
      {% endif %}
      </div>
    </div>
  
</div>
<style>
  .home_banner h4{color:{{section.settings.heading_color}} }
  .home_banner p{color:{{section.settings.text_color}} }
  .home_banner a{color:{{section.settings.text_color2}};border-color:{{section.settings.text_color2}}}
  .b_{{section.id}}{ background-image:url({{section.settings.image | img_url:"master"}})}
  @media only screen
  and (max-width:767px) {
   .b_{{section.id}}{ background-image:url({{section.settings.imagem | img_url:"master"}}) }
  }
</style>
{% schema %}
  {
    "name": "Image with text",
    "settings": [
		{
			"type":"image_picker",
			"id":"image",
			"label":"Image"
		},
		{
			"type":"image_picker",
			"id":"imagem",
			"label":"Mobile Image"
		},
		{
			"type":"color",
			"id":"heading_color",
			"label":"Heading Color",
			"default":"#000"
		},
		{
			"type":"color",
			"id":"text_color",
			"label":"Text Color",
			"default":"#000"
		},
		{
			"type":"color",
			"id":"text_color2",
			"label":"Button Color",
			"default":"#000"
		},
		{
          "type": "select",
          "id": "width",
          "label": "width",
          "default": "full",
          "options": [
            {
              "value": "half",
              "label": "50%"
            },
            {
              "value": "full",
              "label": "100%"
            }
          ]
        },
        {
          "type": "select",
          "id": "alignment",
          "label": "Text Alignement",
          "default": "left",
          "options": [
            {
              "value": "left",
              "label": "left"
            },
            {
              "value": "right",
              "label": "right"
            }
          ]
        },
		{
			"type":"text",
			"id":"heading",
			"label":"Heading"
		},
		{
			"type":"textarea",
			"id":"content",
			"label":"Content"
		},
		{
			"type":"text",
			"id":"btn_text",
			"label":"Button"
		},
		{
			"type":"url",
			"id":"btn_link",
			"label":"Link"
		}
		],
  "presets": [{
    "name": "Image with text",
    "category": "Image"
  }]
  }
{% endschema %}

